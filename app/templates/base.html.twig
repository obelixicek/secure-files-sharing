<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Secure files sharing!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body id="page-top">
    <nav id="navId" class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top d-print-none">
        <div class="container">
            <a class="navbar-brand" href="/">Secure files sharing</a>
            <ul class="navbar-nav">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    {% block menuItems %}{% endblock %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin') }}">Admin</a></li>
                    {% endif %}
                    <li><a href="{{ path('app_logout') }}">Sign out</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Sign in</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
    {% block body %}{% endblock %}
    </body>
</html>
